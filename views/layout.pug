doctype html
html
  head
    title.title
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/stylesheets/style.css")
    link(rel="stylesheet" type="text/css" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css")
    link(href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet")
    script(src="/public/loginfunk") 
  body
    header
        nav.main-menu
            ul
                li
                    a(href='/') 
                        i(class="fa fa-home fa-lg")
                        span.nav-text Home
                if !user
                    li
                        a(href='/users/register') Register
                        i#fa(class="icon-key")
                        span.nav-text 
                    li
                        a(href='/users/login')
                            i.fa(class="icon-signin")
                            span.nav-text Login
                if user
                    li
                        a(href="/post")
                            i#fa(class="icon-comments-alt")
                            span.nav-text Post
                    li
                        a(href="/dashboard")
                            i#fa(class="icon-dashboard")
                            span.nav-text Insiders
                    li
                        a(href='/users/logout')
                            i#fa(class="icon-signout")
                            span.nav-text Logout
    main
        block content
    footer
        div(id='cpy')
