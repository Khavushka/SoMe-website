extends layout

block content
    section
        h1 Please #{title}
        if errors != undefined && errors.length != 0
            each error in errors
                div(role='alert' id='a1') #{error.msg}
        if success_msg != ''
            div(role='alert' id='a2') #{success_msg}
        if error_msg != ''
            div(role='alert' id='a3') #{error_msg}
        if error != ''
            div(role='alert' id='a4') #{error}
        form(method='post' action='/users/login')
                        div.login-wrap
                                div.login-html
                                                div.sign-in
                                                        div.tab Sign In
                                                                div.group
                                                                        div.label User Email
                                                                                input.input(type='email' name='email' required)
                                                                        div.label Password
                                                                                input.input(type='password' name='password' required)
                                                                        input.button(type='submit' value='Go')