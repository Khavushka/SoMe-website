extends layout

block content
    main
                .center
                    form(class="form" method='post' enctype="multipart/form-data" action='/yaddaForm/' + yadda)
                        h1 #{title}   
                        .kontainer
                            textarea#text-area(type="text" name="content" minlength="1" maxlength="167")
                            div.comment-actions
                                input#attach(class="fa fa-paperclip" type="file" name="image" placeholder="optional")
                                button#post(type="submit" class="fa fa-arrow-right")

                if errors != undefined && errors.length != 0
                    each error in errors
                        div(class="error-msg" role='alert' id='a1') #{error.msg}
                if success_msg != ''
                    div(role='alert' id='a2') #{success_msg}
                if error_msg != ''
                    div(class="error-msg" role='alert' id='a3') #{error_msg}
                if error != ''
                    div(class="error-msg" role='alert' id='a4') #{error}