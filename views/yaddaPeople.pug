extends layout

block content
    if user
        main
            input(type="text" placeholder="search")
            if showsfollows
                h1 #{title}
                div
                    a(href="/users/showsall") 
                        button.follow Find Yadda people
                each followee in follows
                    p #{followee.follows}
                    div
                        a(href="/users/unfollow/" + followee.follows) 
                            button.follow Unfollow
            if !showsfollows
                h1 #{title}
                div
                    a(href="/users/showsfollows") 
                        button.follow Show your follows
                div
                    each user in users
                        p #{user.name}
                        div
                            a(href="/users/follow/" + user.uid) 
                                button.follow Follow